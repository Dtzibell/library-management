<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtzi.app.controllers.LoginController">
  <children>
    <GridPane AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" hgap="5" vgap="5">
      <children>
        <Label text="Server IP:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="textIP" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <TextField fx:id="textUsername" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="textPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <HBox alignment="baseline_right" GridPane.columnIndex="1" GridPane.rowIndex="3">
          <children>
            <Button text="Login" onAction="#login"/>
          </children>
        </HBox>
      </children>
    </GridPane>
  </children>
</AnchorPane>
