<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtzi.app.controllers.ConfirmationController">
  <children>
    <VBox AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" spacing="10">
      <children>
        <Label fx:id="question" text="Are you sure you want to execute this action?" />
        <HBox alignment="baseline_right">
          <children>
            <Button text="yes" onAction="#onConfirmAction"/>
            <Button text="no" defaultButton="true" onAction="#closeWindow"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
