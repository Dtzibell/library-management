<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.dtzi.app.ui.AddController">
  <children>
    <GridPane AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" hgap="5" vgap="5">
      <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
      <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
      <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Label fx:id="IDField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      <TextField fx:id="phoneNoField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
      <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
      <Label fx:id="wrongEmail" text="email is incorrect. The email must be @mymail server and be on a 3-lettered domain" GridPane.columnIndex="1" GridPane.rowIndex="5" wrapText="true"/>
      <Button fx:id="addButton" defaultButton="true" text="Add" onAction="#addMember" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
    </GridPane>
  </children>
</AnchorPane>
