<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtzi.app.ui.AreYouSureController">
  <children>
    <GridPane AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" hgap="5" vgap="5" alignment="baseline_center">
      <children>
        <Label fx:id="question" text="Are you sure you want to execute this action?" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
        <Button text="yes" defaultButton="true" GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="baseline_left" onAction="#remove"/>
        <Button text="no" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="baseline_right" onAction="#closeWindow"/>
      </children>
    </GridPane>
  </children>
</AnchorPane>
