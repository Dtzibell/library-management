<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.dtzi.app.MainController">
  <children>
    <SplitPane AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" dividerPositions="0.4" prefWidth="1920">
      <items>
        <VBox spacing="10">
          <children>
            <SplitPane dividerPositions="0.4">
              <items>
                <AnchorPane>
                  <VBox AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
                    AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" spacing="10">
                    <children>
                      <Button fx:id="memberFilterButton" defaultButton="true" text="Filter"
                        onAction="#filterMembers" />
                      <ListView fx:id="personList" prefHeight="1080" />
                    </children>
                  </VBox>
                </AnchorPane>
                <AnchorPane>
                  <children>
                    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
                      AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20">
                      <children>
                        <GridPane hgap="5" vgap="5" alignment="baseline_center">
                          <children>
                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="textName" GridPane.columnIndex="1"
                              GridPane.rowIndex="0" />
                            <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="textSurname" GridPane.columnIndex="1"
                              GridPane.rowIndex="1" />
                            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <Label fx:id="textID" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Label text="Phone Number:" GridPane.columnIndex="0"
                              GridPane.rowIndex="3" />
                            <TextField fx:id="textPhoneNo" GridPane.columnIndex="1"
                              GridPane.rowIndex="3" />
                            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="textEmail" GridPane.columnIndex="1"
                              GridPane.rowIndex="4" />
                          </children>
                        </GridPane>
                        <HBox spacing="10" alignment="baseline_right">
                          <children>
                            <Button text="Update member" defaultButton="true"
                              onAction="#updateMember" />
                            <Button text="Remove member" onAction="#removeMember" />
                          </children>
                        </HBox>
                      </children>
                    </VBox>
                  </children>
                </AnchorPane>
              </items>
            </SplitPane>
            <HBox alignment="baseline_right">
              <children>
                <Button text="Add member" onAction="#addMember" />
              </children>
            </HBox>
          </children>
        </VBox>
        <VBox spacing="10">
          <children>
            <SplitPane dividerPositions="0.4">
              <items>
                <AnchorPane>
                  <VBox AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
                    AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" spacing="10">
                    <children>
                      <Button fx:id="bookFilterButton" defaultButton="true" text="Filter"
                        onAction="#filterBooks" />
                      <ListView fx:id="bookList" prefHeight="1080" />
                    </children>
                  </VBox>
                </AnchorPane>
                <AnchorPane>
                  <children>
                    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
                      AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" prefWidth="600">
                      <children>
                        <GridPane hgap="5" vgap="5" alignment="baseline_center">
                          <children>
                            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextArea fx:id="textTitle" GridPane.columnIndex="1"
                              GridPane.rowIndex="0" wrapText="true"/>
                            <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="textAuthor" GridPane.columnIndex="1"
                              GridPane.rowIndex="1" />
                            <Label text="Publication year:" GridPane.columnIndex="0"
                              GridPane.rowIndex="2" />
                            <TextField fx:id="textPubYear" GridPane.columnIndex="1"
                              GridPane.rowIndex="2" />
                            <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <Label fx:id="textISBN" GridPane.columnIndex="1"
                              GridPane.rowIndex="3" />
                          </children>
                        </GridPane>
                        <HBox spacing="10" alignment="baseline_right">
                          <children>
                            <Button fx:id="bookUpdateButton" text="Update book" defaultButton="true" onAction="#updateBook" />
                            <Button text="Loan book" onAction="#loan" />
                            <Button text="Remove book" onAction="#removeBook" />
                          </children>
                        </HBox>
                      </children>
                    </VBox>
                  </children>
                </AnchorPane>
              </items>
            </SplitPane>
            <HBox alignment="baseline_right">
              <children>
                <Button text="Add book" onAction="#addBook" />
              </children>
            </HBox>
          </children>
        </VBox>
      </items>
    </SplitPane>
  </children>
</AnchorPane>

