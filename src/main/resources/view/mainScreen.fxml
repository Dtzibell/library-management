<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.collections.ObservableList?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtzi.app.MainController">
  <VBox AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20">
    <children>
      <SplitPane dividerPositions="0.5">
        <items>
          <AnchorPane>
            <VBox AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20">
              <children>
                <Button fx:id="filterButton" text="Filter" onAction="#filter"/>
                <ListView fx:id="personList" prefHeight="650"/>
              </children>
            </VBox>
          </AnchorPane>
          <AnchorPane>
            <children>
              <GridPane AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20">
                <children>
                  <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="textName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="textSurname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id = "textID" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="textPhoneNo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                  <TextField fx:id="textEmail" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Button text="Update" onAction="#update" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                </children>
              </GridPane>
            </children>
          </AnchorPane>
        </items>
      </SplitPane>
      <HBox alignment="baseline_right">
        <children>
          <Button text="Add member" onAction="#add"/>
        </children>
      </HBox>
    </children>
  </VBox>
</AnchorPane>

